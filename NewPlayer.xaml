<Window x:Class="SnakeGame.NewPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame"
        mc:Ignorable="d"
        Title="NewPlayer" Height="400" Width="400" Background="#FFB9E466">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="133*"/>
            <RowDefinition Height="133*"/>
            <RowDefinition Height="133*"/>
        </Grid.RowDefinitions>
        <Button Content="Записать игрока" Grid.Row="1" HorizontalAlignment="Left" Height="75" Margin="100,29,0,0" VerticalAlignment="Top" Width="200" FontSize="16" FontWeight="Bold" Click="btnNewPlayer_Click"/>
        <Button Content="Посмотреть рекорды" Grid.Row="2" HorizontalAlignment="Left" Height="75" Margin="100,29,0,0" VerticalAlignment="Top" Width="200" FontSize="16" FontWeight="Bold" Click="btnRecords_Click" AutomationProperties.IsOffscreenBehavior="Onscreen"/>
        <TextBox Grid.Row="0" Name="txtNewPlayer" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="50" Margin="42,41,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="315" FontSize="20" Foreground="Black"/>

    </Grid>
</Window>

<Window x:Class="SnakeGame.RecordListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame"
        mc:Ignorable="d"
        Title="RecordListWindow" Height="669" Width="646">
    <Grid>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" RowHeight="110" Name="DataGridRecords" AutoGenerateColumns="False" IsReadOnly="True" Background="#FFB9E466">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" FontSize="36"/>
                <DataGridTextColumn Header="Record" Binding="{Binding Record}" Width="*" FontSize="36"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
